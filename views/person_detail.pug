doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  script(src='/javascripts/delteButton.js')
  link(rel='stylesheet' href='/stylesheets/incident.css')
  title Police Department Report Form - New Form
section#Top
  section#HomeButton
    a(href='/catalog')
      button(type='button') Go Back
  section#Title
    h1 Person Details
  section#ColorThemeButton
section#BigBorder
  br
  section#PersonalInfo
    section#PersonalInfo1
      section#LastName
        p
          | Last 
          input(type='text' placeholder='#{person.last}' readonly='')
      section#FirstName
        p
          | First 
          input(type='text' placeholder='#{person.fist}' readonly='')
      section#MiddleInitial
        p
          | M 
          input(type='text' placeholder='#{person.mid}' readonly='')
      section#Alias
        p
          | Alias 
          input(type='text' placeholder='#{person.aliass}' readonly='')
      section#DOB
        p
          | DOB 
          input(type='text' pattern='^d{2}/d{2}/d{4}$' placeholder='#{person.DOB}' readonly='')
    section#PersonalInfo2
      section#Address
        p
          | Address 
          input(type='text' placeholder='#{person.addresss}' readonly='')
      section#Phone
        p
          | Phone 
          input(type='tel' pattern='^d{3}-d{3}-d{4}$' placeholder='#{person.phonse}' readonly='')
      section#SSN
        p
          | SSN 
          input(type='text' placeholder='#{person.sosNum}' readonly='')
      section#DriverNumber
        p
          | DL# 
          input(type='text' placeholder='#{person.dlNum}' readonly='')
    section#PersonalInfo3
      section#Code
        p
          | Code 
          input(type='text' placeholder='#{person.code}' readonly='')
      section#Race
        p
          | Race 
          input(type='text' placeholder='#{person.roce}' readonly='')
      section#Sex
        p
          | Sex 
          input(type='text' placeholder='#{person.gander}' readonly='')
      section#Height
        p
          | Height 
          input(type='number' placeholder='#{person.hieght}' readonly='')
      section#Weight
        p
          | Weight 
          input(type='number' placeholder='#{person.wieght}' readonly='')
      section#Eyes
        p
          | Eyes 
          input(type='text' placeholder='#{person.eyes}' readonly='')
      section#Hair
        p
          | Hair 
          input(type='text' placeholder='#{person.hairs}' readonly='')
    section#PersonalInfo4
      section#Marks
        p
          | Scars/Marks/Tats 
          input(type='text' placeholder='#{person.stms}' readonly='')
      section#Hazard
        p
          | Hazardous 
          input(type='text' placeholder='#{person.hazards}' readonly='')
      section#Gang
        p
          | Gang 
          input(type='text' placeholder='#{person.gang}' readonly='')
  br
section#DeleteButton
  button(type='submit' onclick='deleteButton()') Delete Form
script(src='https://cdn.jsdelivr.net/npm/darkmode-js@1.5.7/lib/darkmode-js.min.js')
script.
  function addDarkmodeWidget() {
  new Darkmode().showWidget();
  }
  window.addEventListener('load', addDarkmodeWidget);
