doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  link(rel='stylesheet' href='/stylesheets/form.css')
  title Police Department Report Form - New Form
section#Top
  section#HomeButton
    a(href='/catalog')
      button(type='button') Go Back
  section#Title
    h1 Vehicle/Bike Report Form
  section#ColorThemeButton
form(method='POST' action='')
  section#BigBorder
    section#VehicleBikeInfo
      section#VehicleBikeInfoText
        h3 Vehicle/Bike Information
      section#VehicleInfo1
        section#VehicleNumber
          p
            | Vehicle # 
            input(type='text' placeholder='')
        section#VINSerialNumber
          p
            | VIN/Serial Number 
            input(type='text' placeholder='')
        section#LicensePlateNumberState
          p
            | License #/State 
            input(type='text' placeholder='')
      section#VehicleInfo2
        section#Color
          p
            | Color
            select(name='colordropdown')
              option(value='Blank') 
              option(value='Beige') BGE
              option(value='Black') BLK
              option(value='Blue') BLU
              option(value='DarkBlue') DBL
              option(value='LightBlue') LBL
              option(value='Bronze') BRZ
              option(value='Brown') BRO
              option(value='Gold') GLD
              option(value='Gray') GRY
              option(value='Green') GRN
              option(value='Marron') MRN
              option(value='Orange') ORG
              option(value='Pink') PNK
              option(value='Purple') PLE
              option(value='Red') RED
              option(value='Silver') SIL
              option(value='Tan') TAN
              option(value='Turquoise') TRQ
              option(value='White') WHI
              option(value='Yellow') YEL
              option(value='Teal') TEA
              option(value='Other') OTH
              option(value='Unknown') UNK
        section#Year
          p
            | Year 
            input(type='text' placeholder='')
        section#Make
          p
            | Make 
            input(type='text' placeholder='')
        section#Model
          p
            | Model 
            input(type='text' placeholder='')
        section#Style
          p
            | Style 
            input(type='text' placeholder='')
    hr#SmallLine
    // ---------- Literal Line Break ----------
    section#VehicleBikeDetails
      h3 Vehicle/Bike Details
      textarea(type='text' placeholder='' rows='10' style='resize: none;')
  section#SubmitButton
    button(type='submit') Submit
script(src='https://cdn.jsdelivr.net/npm/darkmode-js@1.5.7/lib/darkmode-js.min.js')
script.
  function addDarkmodeWidget() {
  new Darkmode().showWidget();
  }
  window.addEventListener('load', addDarkmodeWidget);
